@using Web.Infrastructure.Helpers
@model IEnumerable<Web.Models.Presentation>
@{
    ViewBag.Title = "Home";
}
<div class="hero-unit">
    <div id="presentations" class="carousel slide">
        <div class="carousel-inner">
            @foreach (var presentation in Model)
            {
                <div class="item">
                    <img alt="@presentation.Presenter.Name" src="@Url.Gravatar(@presentation.Presenter.Id, 80)" />
                    <h1>@presentation.Title</h1>
                    <h2>
                        with @presentation.Presenter.Name on @presentation.PresentationDate.ToLongDateString()</h2>
                    <p>@presentation.Description</p>
                </div>
        
            }
        </div>
        <p>
            <a id="Next" class="btn btn-primary btn-large" href="#presentations" data-slide="next">
                Next &raquo;</a>
        </p>
    </div>
</div>
