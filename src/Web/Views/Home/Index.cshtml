@using Web.Infrastructure.Helpers
@model IEnumerable<Web.Models.Presentation>

@{
    ViewBag.Title = "Home";
}

@foreach (var presentation in Model)
{
    <div class="hero-unit" id="@presentation.Id">
        <h1>@presentation.Title</h1> 
        <img class="presenter-image" src="@Url.Gravatar(@presentation.Presenter.Id, 52)" />
        <h2>with @presentation.Presenter.Name</h2>
        <h3>on @presentation.PresentationDate.ToLongDateString()</h3>
        <p class="clearfix">@presentation.Description</p>
        <p><a id="Next" class="btn primary large" href="#">Next &raquo;</a></p>     
    </div>        
}

<div class="row"> 
        <div class="span5"> 
            Where when who what...
        </div> 
        <div class="span6"> 
            <img src="@Url.Content("~/Content/images/location.gif")" />
        </div> 
        <div class="span5" style="margin:auto;"> 
          <div class="slideshow">
            <div><img src="@Url.Content("~/Content/images/resized/microsoft_logo.jpg")" alt="Sponser Microsoft" /></div>
            <div><img src="@Url.Content("~/Content/images/resized/appharbor.png")" alt="Sponser Appharbor" /></div>
            <div><img src="@Url.Content("~/Content/images/resized/codesmart.png")" alt="Sponser Codesmart" /></div>
            <div><img src="@Url.Content("~/Content/images/resized/INETASponsoredEvent.jpg")" alt="Sponser Ineta Sponsered Event" /></div>
            <div><img src="@Url.Content("~/Content/images/resized/Milestone_Logo.jpg")" alt="Sponser Milestone" /></div>
            <div><img src="@Url.Content("~/Content/images/resized/pluralsight-fullcolor-250x55-v1.png")" alt="Sponser Pluralsight" /></div>
            <div><img src="@Url.Content("~/Content/images/resized/RavenDb_Logo_toFix.png")" alt="Sponser RavenDb" /></div>
            <div><img src="@Url.Content("~/Content/images/resized/tekpub_logo-200.png")" alt="Sponser Tekpub" /></div>
